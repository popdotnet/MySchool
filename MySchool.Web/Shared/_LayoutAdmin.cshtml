<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <script src="~/Scripts/jquery-3.2.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>

        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href=@Href("~/Content/Site.css") rel="stylesheet" />

        @RenderSection("head", required: false)
        @RenderSection("script", required: false)
    </head>
    <body>

        <nav class="navbar navbar-default navbar-fixed-top nav-top-container navbar-color">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Nr-Tasks</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li><a href="@Href("~/Index")">Main Site</a></li>
                        <li><a href="@Href("~/Admin/Home")">Home</a></li>

                        @if (WebSecurity.HasUserId && (Roles.IsUserInRole(App.ControlRol) || Roles.IsUserInRole(App.AdminRol) || Roles.IsUserInRole(App.PowerUserRol)))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Department
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Href("~/Admin/Pages/Department/CreateDepartment")">Create Department</a></li>
                                    <li><a href="@Href("~/Admin/Pages/Department/UpdateDepartment")">Update Department</a></li>

                                    @if (WebSecurity.HasUserId && Roles.IsUserInRole(App.ControlRol))
                                    {
                                        <li><a href="@Href("~/Admin/Pages/Department/DeleteDepartment")">Delete Department</a></li>
                                    }


                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Category
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Href("~/Admin/Pages/Cat/CreateCat")">Create Category</a></li>
                                    <li><a href="@Href("~/Admin/Pages/Cat/UpdateCat")">Update Category</a></li>

                                    @if (WebSecurity.HasUserId && Roles.IsUserInRole(App.ControlRol))
                                    {
                                        <li><a href="@Href("~/Admin/Pages/Cat/DeleteCat")">Delete Category</a></li>
                                    }


                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Book
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Href("~/Admin/Pages/Book/CreateBook")">Create Book</a></li>
                                    <li><a href="@Href("~/Admin/Pages/Book/UpdateBook")">Update Book</a></li>

                                    @if (WebSecurity.HasUserId && Roles.IsUserInRole(App.ControlRol))
                                    {
                                        <li><a href="@Href("~/Admin/Pages/Book/DeleteBook")">Delete Book</a></li>
                                    }


                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Book Parts
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Href("~/Admin/Pages/BookPart/CreateBookPart")">Create Book Parts</a></li>
                                    <li><a href="@Href("~/Admin/Pages/BookPart/UpdateBookPart")">Update Book Parts</a></li>

                                    @if (WebSecurity.HasUserId && Roles.IsUserInRole(App.ControlRol))
                                    {
                                        <li><a href="@Href("~/Admin/Pages/BookPart/DeleteBookPart")">Delete Book Parts</a></li>
                                    }


                                </ul>
                            </li>
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Chapters
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Href("~/Admin/Pages/Chapter/CreateChapter")">Create Chapter</a></li>
                                    <li><a href="@Href("~/Admin/Pages/Chapter/UpdateChapter")">Update Chapter</a></li>

                                    @if (WebSecurity.HasUserId && Roles.IsUserInRole(App.ControlRol))
                                    {
                                        <li><a href="@Href("~/Admin/Pages/Chapter/DeleteChapter")">Delete Chapter</a></li>
                                    }


                                </ul>
                            </li>
                        }

                    </ul>
                    <ul class="nav navbar-nav navbar-right">

                        @if (WebSecurity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <span class="glyphicon glyphicon-user" style="margin-left:10px;margin-right:10px;"></span>@WebSecurity.CurrentUserName
                                    <span class="caret"></span>
                                </a>
                               
                                <ul class="dropdown-menu">
                                    <li><a href="@Href(@"~/Account/ChangePassword.cshtml")">Change Password</a></li>
                                    <li><a href="@Href(@"~/Account/ProfilePicture.cshtml")">Change Profile Pictur</a></li>

                                    @if (WebSecurity.HasUserId && (Roles.IsUserInRole(App.ControlRol) || Roles.IsUserInRole(App.AdminRol)))
                                    {
                                        <li><a href="@Href(@"~/Admin/Users/CreateUser")">Add New User</a></li>
                                        <li><a href="@Href(@"~/Admin/Users/UpdateUser")">Update User</a></li>
                                        <li><a href="@Href(@"~/Admin/Users/AddUsersToRoles")">Add Users To Roles</a></li>

                                    }

                                </ul>
                            </li>

                            <li><a href="@Href("~/Account/Logout?returnUrl =" + Server.UrlEncode(Request.ServerVariables["script_name"]))"><span class="glyphicon glyphicon-log-out"></span> Login Out</a></li>

                        }
                        else
                        {
                            <li><a href="@Href("~/Account/Login")"><span class="glyphicon glyphicon-log-in"></span> Login In</a></li>
                            //<li><a href="@Href("~/Account/Register")"><span class="glyphicon glyphicon-registration-mark"></span>Register</a></li>
                        }


                    </ul>

                </div>
            </div>
            <div class="clearfix">

            </div>
        </nav>

        <div class="container" style="padding-top:100px;">
            @RenderBody()
        </div>
    </body>
</html>
