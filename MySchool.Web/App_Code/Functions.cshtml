        {
            //--------Set Coockie
            Response.Cookies["loginTimeOut"].Value = value;
            Response.Cookies["loginTimeOut"].Expires = DateTime.Now.AddMinutes(minuts);
        }
        else
        {
            var c = Request.Cookies["loginTimeOut"]; //-----to activate coockie

