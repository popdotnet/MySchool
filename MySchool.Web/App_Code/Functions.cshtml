@using System.Text.RegularExpressions;
@using MyExtension;



@functions{
    public static bool IsValidEmail(string s)
    {
        string pattern = @"^\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$";
        return Regex.IsMatch(s, pattern);
    }

   


    public static string SetLoginCoockie(bool setCoockie)
    {

